    "assets",
    "path-regex",
    "vite-plugin",
    "file-manipulation",
    "custom-plugin",
    "build-bundle",
    "vite-plugin-replace-paths",
    "path-replace",
    "html",
    "asset",
    "build-optimization",
    "web-development",
    "javascript"
  ]
}
